<!-- HIGHLIGHT
<% var highlight = page.sections[i].content.highlight; %>
<%- JSON.stringify(highlight) %>
-->
<section id="mission" style="background: #e3e3e3;">
  <div class="container">
    <div class="row text-center">
      <div class="col-lg-12">
        <h1><%=highlight.heading%></h1>
        <h4><%=highlight.subHeading%></h4>
        <hr class="section-divider" />
      </div>
    </div>
    <div class="row text-center content-row">
      <% for( var x = 0, l = highlight.content.length; x < l; x++){
            var item = highlight.content[x]; %>
        <div class="col-md-3 col-sm-6">
          <div class="about-content">
            <i class="<%=item.icon%>"></i>
            <h3><%=item.title%></h3>
            <p><%=item.description%></p>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>